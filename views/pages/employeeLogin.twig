{% extends "../layouts/company.twig" %}

{% block main %}
	<main class="p-10 bg-neutral-100">
		{% if error %}
			<p class="w-fit text-center mb-5 m-auto border border-red-600 bg-white text-red-600 font-bold">{{ error }}</p>
		{% endif %}

		<h2 class="text-center pb-5 md:text-2xl 2xl:text-4xl">Connectez-vous pour accéder à votre dashboard employé !</h2>
		<form class="border border-lime-600 rounded-lg shadow-sm shadow-lime-300 m-auto p-10 w-2xs flex flex-col md:gap-4 md:w-md 2xl:w-2xl" action="/employees/login" method="post">
			<div class="flex flex-col">
				<label class="m-auto md:text-xl 2xl:text-2xl" for="mail">Mail :
				</label>
				<input class="text-sm md:text-lg 2xl:text-2xl m-auto border border-lime-600 rounded-lg w-50 md:w-75 2xl:w-100 pl-1 shadow-sm shadow-lime-300" type="mail" id="mail" name="mail" placeholder="Votre mail">
			</div>
			<div class="flex flex-col">
				<label class="m-auto md:text-xl 2xl:text-2xl" for="password">Mot de passe :
				</label>
				<input class="text-sm md:text-lg 2xl:text-2xl m-auto border border-lime-600 rounded-lg w-50 md:w-75 2xl:w-100 pl-1 shadow-sm shadow-lime-300" type="password" id="password" name="password" placeholder="Mot de passe">
			</div>
			<button class="2xl:text-2xl font-bold m-auto mt-5 p-2 border rounded-lg w-fit bg-lime-400 hover:bg-lime-200 shadow-sm shadow-lime-600">Se connecter</button>
		</form>
	</main>
{% endblock %}
