{% extends "../layouts/company.twig" %}

{% block main %}
	<main class="p-5 md:p-10 bg-neutral-100">
		<h2 class="text-center pb-5 md:text-2xl 2xl:text-4xl">Premi√®re connexion : modifiez votre mot de passe !</h2>
		<form class="border border-lime-600 rounded-lg shadow-sm shadow-lime-300 m-auto p-10 w-xs flex flex-col md:gap-4 md:w-md 2xl:w-2xl" action="/employees/reset" method="post">
			<div class="flex flex-col">
				<label class="m-auto md:text-xl 2xl:text-2xl" for="mail">Mail :
				</label>
				<input class="text-sm md:text-lg 2xl:text-2xl m-auto border border-lime-600 rounded-lg w-60 md:w-90 2xl:w-120 pl-1 shadow-sm shadow-lime-300" type="mail" id="mail" name="mail" placeholder="Votre mail">
			</div>
			<div class="flex flex-col">
				<label class="m-auto md:text-xl 2xl:text-2xl" for="initialPassword">Mot de passe initial :
				</label>
				<input class="text-sm md:text-lg 2xl:text-2xl m-auto border border-lime-600 rounded-lg w-60 md:w-90 2xl:w-120 pl-1 shadow-sm shadow-lime-300" type="password" id="initialPassword" name="initialPassword" placeholder="Mot de passe initial">
			</div>
            <div class="flex flex-col">
				<label class="m-auto md:text-xl 2xl:text-2xl" for="newPassword">Nouveau mot de passe :
				</label>
				<input class="text-sm md:text-lg 2xl:text-2xl m-auto border border-lime-600 rounded-lg w-60 md:w-90 2xl:w-120 pl-1 shadow-sm shadow-lime-300" type="password" id="newPassword" name="newPassword" placeholder="12+ majuscule(s), minuscule(s) et chiffre(s)">
			</div>
            <div class="flex flex-col">
				<label class="m-auto md:text-xl 2xl:text-2xl" for="confirmPassword">Confirmez votre nouveau mot de passe :
				</label>
				<input class="text-sm md:text-lg 2xl:text-2xl m-auto border border-lime-600 rounded-lg w-60 md:w-90 2xl:w-120 pl-1 shadow-sm shadow-lime-300" type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirmer le mot de passe">
			</div>
			<button class="2xl:text-2xl font-bold m-auto mt-5 p-2 border rounded-lg w-fit bg-lime-400 hover:bg-lime-200 shadow-sm shadow-lime-600">Valider</button>
		</form>
		{% if error %}
			<p>{{ error }}</p>
		{% endif %}
	</main>
{% endblock %}