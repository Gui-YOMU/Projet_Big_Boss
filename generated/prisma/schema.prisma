model Car {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(20)
  plate      String    @unique
  companyId  Int
  company    Company   @relation(fields: [companyId], references: [id])
  employeeId Int?      @unique
  employee   Employee? @relation(fields: [employeeId], references: [id])
}

model Company {
  id        Int        @id @default(autoincrement())
  name      String     @db.VarChar(150)
  siret     String     @unique @db.Char(14)
  password  String
  ceo       String?
  employees Employee[]
  cars      Car[]
  patients  Patient[]
  tours     Tour[]
  missions  Mission[]
}

model Employee {
  id        Int       @id @default(autoincrement())
  lastName  String    @db.VarChar(70)
  firstName String    @db.VarChar(60)
  mail      String    @unique @db.VarChar(150)
  password  String
  birthday  DateTime? @db.Date
  // i.e. new Date('1998-12-24')
  gender    Gender?
  companyId Int
  company   Company   @relation(fields: [companyId], references: [id])
  missions  Mission[]
  car       Car?
}

enum Gender {
  male
  female
  other
}

model Mission {
  id         Int      @id @default(autoincrement())
  date       DateTime @db.Date
  tourId     Int
  tour       Tour     @relation(fields: [tourId], references: [id])
  employeeId Int
  employee   Employee @relation(fields: [employeeId], references: [id])
  companyId  Int
  company    Company  @relation(fields: [companyId], references: [id])
}

model Patient {
  id           Int     @id @default(autoincrement())
  lastName     String  @db.VarChar(70)
  firstName    String  @db.VarChar(60)
  streetNumber Int
  street       String
  zipCode      String
  city         String
  companyId    Int
  company      Company @relation(fields: [companyId], references: [id])
  tourId       Int?
  tour         Tour?   @relation(fields: [tourId], references: [id])
}

model Tour {
  id        Int       @id @default(autoincrement())
  name      String
  patients  Patient[]
  missions  Mission[]
  companyId Int
  company   Company   @relation(fields: [companyId], references: [id])
}

